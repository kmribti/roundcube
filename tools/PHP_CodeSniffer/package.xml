 <contents>
  <dir name="/">
   <dir name="CodeSniffer">
    <dir name="Standards">
     <dir name="RoundCube">
      <dir name="Sniffs">
       <dir name="ControlStructures">
        <file baseinstalldir="PHP" name="/ControlSignatureSniff.php" role="php">
         <tasks:replace from="@package_version@" to="version" type="package-info" />
        </file>
        <file baseinstalldir="PHP" name="/DisallowPEARIfElseElseifSniff.php" role="php">
         <tasks:replace from="@package_version@" to="version" type="package-info" />
        </file>
       </dir>
      </dir>
      <file baseinstalldir="PHP" name="RoundCubeCodingStandard.php" role="php">
       <tasks:replace from="@package_version@" to="version" type="package-info" />
      </file>
     </dir>
    </dir>
   </dir>
  </dir>
 </contents>
 <dependencies>
  <required>
   <php>
    <min>5.1.2</min>
   </php>
   <pearinstaller>
    <min>1.4.0b1</min>
   </pearinstaller>
  </required>
 </dependencies>
